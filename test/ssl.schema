
%
% This schema is designed to hold a symbol table while processing an
% SSL program description.
%
% Steve Rice -- Aug 24 '93
%

Schema SSL Root nScope Is

% -----------------------------------------------------------------------
% Scope
% -----------------------------------------------------------------------
 
Object ::= nScope
nScope =>
	qParentScope:	Node		(nScope)		[Alt,Opt]
	qDecls:		List		(nDeclaration)		[Pri,Opt]

% -----------------------------------------------------------------------
% Declarations
% -----------------------------------------------------------------------

Object ::= nDeclaration
nDeclaration =>
	qIdent:		Integer4

nDeclaration ::= nIdent

nIdent ::= nInput
nInput =>
	qValue:		Integer4

nIdent ::= nOutput
nOutput =>
	qValue:		Integer4

nIdent ::= nError
nError =>
	qValue:		Integer4

nIdent ::= nType

nIdent ::= nValue	% element of a type
nValue =>
	qValue:		Integer4
	qType:		Node		(nType)			[Alt]

nIdent ::= nMechanism

nIdent ::= nOperation
nOperation =>
	qValue:		Integer4
	qType:		Node		(nType)			[Alt,Opt]
        qParamScope:    Node            (nScope)                [Pri,Opt]

nIdent ::= nRule
nRule =>
	qValue:		Integer4
	qType:		Node		(nType)			[Alt,Opt]
        qParamScope:    Node            (nScope)                [Pri,Opt]
	qScope:		Node		(nScope)		[Pri,Opt]

% -----------------------------------------------------------------------
% Variables
% -----------------------------------------------------------------------

nIdent ::= nVariable
nVariable =>
	qAddr:		Integer4
	qType:		Node		(nType)			[Alt]

nVariable ::= nParam

nParam    ::= nInParam
nParam    ::= nOutParam
nParam    ::= nInOutParam

nVariable ::= nLocal

nVariable ::= nGlobal


